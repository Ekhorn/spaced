{
  "private": true,
  "type": "module",
  "workspaces": [
    "srcs/app",
    "srcs/slate-solid",
    "srcs/slate-yjs-solid",
    "srcs/types",
    "srcs/e2e"
  ],
  "scripts": {
    "bin": "target/release/spaced",
    "build": "npx --workspace=slate-solid tsc -b && vite build --emptyOutDir",
    "clippy": "cargo clippy --all-features --all-targets",
    "clippy:fix": "cargo clippy --all-features --all-targets --fix",
    "codegen": "npm --workspace e2e run codegen",
    "deploy": "srcs/scripts/deploy.sh",
    "dev": "vite",
    "e2e": "npm --workspace e2e run e2e --",
    "fmt": "cargo fmt --check --all",
    "fmt:fix": "cargo fmt --all",
    "load:document_connections": "npx artillery run config/load/document_connections.yaml -o config/load/document_connections_$(date +%s).json",
    "load:document_updates": "npx artillery run config/load/document_updates.yaml -o config/load/document_updates_$(date +%s).json",
    "load:load_documents": "npx artillery run config/load/load_documents.yaml -o config/load/load_documents_$(date +%s).json",
    "load:single_document_updates": "npx artillery run config/load/single_document_updates.yaml -o config/load/single_document_updates_$(date +%s).json",
    "prepare": "husky",
    "preview": "vite preview",
    "services": "srcs/scripts/start.sh",
    "sqlx:prepare": "srcs/scripts/sqlx_prepare.sh",
    "tauri": "tauri",
    "test": "vitest"
  },
  "lint-staged": {
    "*.{html,json,md,yaml,yml}": [
      "prettier --check"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ]
  },
  "dependencies": {
    "jwt-decode": "^4.0.0",
    "solid-icons": "^1.1.0"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.0",
    "@tauri-apps/cli": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-playwright": "^1.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-solid": "^0.14.0",
    "eslint-plugin-sort-destructure-keys": "^1.0.0",
    "eslint-plugin-unicorn": "^51.0.0",
    "husky": "^9.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.1.0",
    "prettier-plugin-packagejson": "^2.0.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
